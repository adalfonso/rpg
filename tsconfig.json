{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@common/*": ["./src/common/*"],
      "@img/*": ["./src/renderer/resource/img/*"],
      "@main/*": ["./src/main/*"],
      "@schema/*": ["./src/renderer/state/schema/*"]
    }
  },
  "include": ["src/**/*", "tools/**/*"]
}
