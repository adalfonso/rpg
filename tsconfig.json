{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",

  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "lib": ["es2019", "dom"],
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@/*": ["./src/renderer/ts/*"],
      "@img/*": ["./src/renderer/img/*"]
    }
  }
}
